@model StudentsContact.Models.ViewModels.StudentViewModel
@{
    var header = "Student Registration Form";
//var errs = ViewData.ModelState.Where(n => n.Value.Errors.Count > 0).ToList();
}


<div class="col-md-7">
    <form method="post" asp-action="Upsert" enctype="multipart/form-data">
        @if (Model.StudentsContacts != null)
        {
            @if (Model.StudentsContacts.Id != 0)
            {
                <input asp-for="StudentsContacts.Id" hidden class="form-control" />
                header = "Edit Student Information";
            }

        }
        <h1>@header</h1>
        <div>
            @Html.ValidationSummary()
        </div>
        <div class="form-group">
            <label asp-for="StudentsContacts.FirstName" class="control-label"></label>
            <input asp-for="StudentsContacts.FirstName" class="form-control" />
            <span asp-validation-for="StudentsContacts.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StudentsContacts.LastName" class="control-label"></label>
            <input asp-for="StudentsContacts.LastName" class="form-control" />
            <span asp-validation-for="StudentsContacts.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StudentsContacts.DOB" class="control-label"></label>
            <input asp-for="StudentsContacts.DOB" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StudentsContacts.EmailAddress" class="control-label"></label>
            <input asp-for="StudentsContacts.EmailAddress" class="form-control" />
            <span asp-validation-for="StudentsContacts.EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StudentsContacts.PhoneNumber" class="control-label"></label>
            <input asp-for="StudentsContacts.PhoneNumber" class="form-control" />
            <span asp-validation-for="StudentsContacts.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="StudentsContacts.Address.AddresLine" class="control-label"></label>
                <input asp-for="StudentsContacts.Address.AddresLine" class="form-control" />
                <span asp-validation-for="StudentsContacts.Address.AddresLine" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="StudentsContacts.Address.City" class="control-label"></label>
                <input asp-for="StudentsContacts.Address.City" class="form-control" />
                <span asp-validation-for="StudentsContacts.Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsContacts.Address.ParishId" class="control-label"></label>
                <select asp-for="StudentsContacts.Address.ParishId" class="form-control" asp-items="ViewBag.StudentsContacts.Address.ParishId"></select>
            </div>
        </div>
        <div class="form-group col">
            <label asp-for="StudentsContacts.Image" class="control-label"></label>
            <input type="file" multiple name="files" id="studentImage" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StudentsContacts.CourseId" class="control-label"></label>
            <select asp-for="StudentsContacts.CourseId" class="form-control" asp-items="@Model.CourseSelectList">
                <option selected disabled>--Select a course--</option>
            </select>
        </div>
        <div class="form-group">
            @if (Model.StudentsContacts.Id == 0)
            {
                <input type="submit" value="Save Changes" class="btn btn-outline-success" />
            }
            else
            {
                <input type="submit" value="Update Changes" class="btn btn-info" />

            }
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        // Html.RenderPartial("_ValidationScriptsPartial");
        <partial name="_ValidationScriptsPartial" />
    }
}
